<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>
  <br>
  <input type="text" name="pet[name]">

<h3>Existing Owners</h3>
  <% @owners.each do |owner| %>
    <input type="checkbox" name="owner[pet_ids][]" id="<%= pet.id %>" value="<%= pet.id %>"><%= pet.name %><br>
  <% end %>

</form>
