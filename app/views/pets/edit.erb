<h1>Updates for Pet</h1>
<h2>Edits for <%= @pet.name %></h2>

<form action="/pets/<%=@pet.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Edit the Pet's Name:</label>
  <br>
  <input type="text" name="pet[name]" value="<%=@pet.name%>" id="pet_name">

<h3>Existing Owner</h3>
  <% @owner.each do |pet| %>
    <input type="text" name="pet[owner_ids][]" id="<%=owner.id%>" value="<%=owner.id%>" <% if @pet.owner_id.include?(owner.id) %>><%= owner.name %></input><br>
  <% end %>
  <br>

<h3>New Owner</h3>

  <input type="submit" value="Update Pet">
</form>
